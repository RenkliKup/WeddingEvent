@model DugunDaveti.Models.WeddingInvent
@{
    ViewData["Title"] = "Home Page";

}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <form asp-action="Index" method="post">

        <div class="form-group">

            <label>Name</label>
            <input asp-for="name" class="form-control" name="name" placeholder="name">
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group">

            <label>surname</label>
            <input asp-for="surname" class="form-control" name="surname" placeholder="surname" />
            <span asp-validation-for="surname" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <input asp-for="isAttend" name="isAttend" class="form-check-input">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>

        </div>
        <div class="form-group">
            <label>Mail</label>
            <input asp-for="Mail" name="Mail" class="form-control">
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>telno</label>
            <input asp-for="TelNo" name="TelNo" class="form-control">
            <span asp-validation-for="TelNo" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    </div>
