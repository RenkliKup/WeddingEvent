<div class="reservations__item">
    <div class="item__header ">
        <div class="item__header--left">
            <img src="https://avatars.dicebear.com/api/miniavs/aakdqkq.svg">
            <div class="left_text">
                <h4>@Model.surname Ailesi</h4>
                <span>@Model.Mail</span>
                <span>@Model.TelNo</span>
            </div>
        </div>
        @if (Model.isAttend==true)
        {
           
            <div class="item__header--right">
                <div class="res_result success">
                    <i class="fa fa-check"></i>
                </div>
                <span class="count">5 <span class="small">kişi geliyor</span></span>
            </div>
        }
        else
        {
            <div class="item__header--right">
                <div class="res_result error">
                    <i class="fa fa-times"></i>
                </div>
                <span class="count"><span class="small">gelemiyor</span></span>
            </div>
        }

    </div>

    <div class="item__footer">
        <p>
            @if (Model.isAttend==true)
            {
                @Html.Label("Models", "Bu güzel günde sizleri tabiki yalnız bırakmayacağız.")
            }
            else
            {
                @Html.Label("Models", "ikinciye artık")
            }
        </p>

    </div>


</div>



